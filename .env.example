# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_AI_STUDIO_KEY=your_google_ai_studio_key_here
CEREBRAS_API_KEY=your_cerebras_api_key_here

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-site.netlify.app
NEXT_PUBLIC_SITE_NAME="Mohamed Fares AI Portfolio"

# Contact Form (if using email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Database (if needed for analytics or contact forms)
DATABASE_URL=postgresql://username:password@localhost:5432/portfolio

# Security
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=https://your-site.netlify.app

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ACCESSIBILITY=true

# Development
NODE_ENV=production
